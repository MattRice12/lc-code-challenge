<%= form_for(comment) do |f| %>
  <div class="errors">
    <ul>
      <% comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>

  <div class="form-body">
    <div><%= f.text_area :text %></div>
    <div><%= f.submit "Submit" %></div>
  </div>
<% end %>
